<h1>User Albums</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>User Id</th>
		<th colspan=3>Action</th>
	</tr>
	<% @albums.each do |album| %>
		<tr>
			<td><%= album.name %></td>
			<td><%= album.description %></td>
			<td><%= album.user_id %></td>
			<td><%= link_to 'Show', album_path(album) %></td>
			<td><%= link_to 'Edit', edit_album_path(album) %></td>
			<td><%= link_to 'Delete', album_path(album), method: :delete, data: {confirm: 'Are you Sure?'} %></td>
		</tr>
	<% end %>
	
</table>

<%= link_to 'New Album', new_album_path %>